{
	"name": "philhosoft-js-playground",
	"version": "0.1.0",
	"description": "Playground Web Application: playing with JS frameworks",
	"author": "PhiLho <PhiLho(a)GMX.net>",
	"contributors":
	[
		{ "name": "You", "email": "you@example.com" }
	],
	"private": false,
	"license": "http://www.opensource.org/licenses/Zlib",
	"repository":
	{
		"type": "git",
		"url": "https://github.com/PhiLhoSoft/Web-Playground.git"
	},
	"main": "src/main/html/index.html",
	"devDependencies":
	{
		"bower": "^1.3.9",
		"chai": "^2.1.0",
		"http-server": "^0.7.3",
		"istanbul": "~0.3.2",
		"jshint": "^2.5.10",
		"mocha": "^1.21.4",
		"mocha-phantomjs": "^3.5.3",
		"node-sass": "3.0.0-alpha.0",
		"opener": "^1.4.0",
		"phantomjs": "~1.9.1",
		"rimraf": "^2.2.8",
		"sinon": "^1.14.1",
		"sinon-chai": "^2.7.0",
		"uglify-js": "^2.4.17"
	},
	"scripts":
	{
		"clean": "rimraf dist/*",
		"lint": "jshint src/main/js/",

		"prebuild": "npm run clean -s",
		"build": "npm run build:scripts -s && npm run build:styles -s",
		"build:scripts": "echo no build step currently",
		"build:styles": "node-sass --source-comments --source-map=true --output-style nested --include-path src/main/sass --output asset/css src/main/sass/playground.scss",
		"wsass": "node-sass --watch --source-comments --source-map=true --output-style nested --include-path src/main/sass --output asset/css src/main/sass/playground.scss",
		"css": "node node-sass-run.js",

		"pretest": "npm install && npm run lint",
		"pretestph": "npm install && npm run lint",
		"prestart": "npm install",
		"postinstall": "bower install",
		"start": "http-server -a localhost -p 8090 src/main/html/",

		"test": "mocha --reporter spec --recursive src/test",
		"testb": "opener src/test/TestBed.html",
		"//": "Windows-specific path because of https://github.com/joyent/node/issues/5841",
		"testphw": "mocha-phantomjs --reporter spec -p node_modules/phantomjs/lib/phantom/phantomjs.exe src/test/TestBed.html",
		"testphu": "mocha-phantomjs --reporter spec -p ./node_modules/phantomjs/bin/phantomjs src/test/TestBed.html",
		"cover": "istanbul cover node_modules/mocha/bin/_mocha -- --reporter dot --recursive src/test",
		"coverr": "npm run cover && opener ./coverage/lcov-report/index.html"
	}
}
