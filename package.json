{
	"name": "philhosoft-js-playground",
	"version": "0.1.0",
	"description": "Playground Web Application: playing with JS frameworks",
	"author": "PhiLho <PhiLho(a)GMX.net",
	"private": false,
	"license": "http://www.opensource.org/licenses/Zlib",
	"main": "src/main/index.html",
	"devDependencies":
	{
		"bower": "^1.3.9",
		"browserify": "^4.2.3",
		"http-server": "^0.7.1",
		"karma": "^0.12.23",
		"karma-chrome-launcher": "^0.1.4",
		"karma-firefox-launcher": "^0.1.3",
		"karma-coverage": "^0.2.6",
		"karma-jasmine": "^0.1.5",
		"karma-phantomjs-launcher": "^0.1.4"
	},
	"scripts":
	{
		"env": "env",
		"postinstall": "bower install",
		"prestart": "npm install",
		"start": "http-server -a 0.0.0.0 -p 8000",
		"pretest": "npm install",
		"test": "node node_modules/karma/bin/karma start src/test/js/karma.conf.js",
		"test-single-run": "node node_modules/karma/bin/karma start src/test/js/karma.conf.js --single-run",
		"preupdate-webdriver": "npm install",
		"update-webdriver": "webdriver-manager update",
		"lint": "jshint src/main/js/**.js"
	}
}
