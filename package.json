{
	"name": "philhosoft-js-playground",
	"version": "0.1.0",
	"description": "Playground Web Application: playing with JS frameworks",
	"author": "PhiLho <PhiLho(a)GMX.net",
	"contributors":
	[
		{ "name": "You", "email": "you@example.com" }
	],
	"private": false,
	"license": "http://www.opensource.org/licenses/Zlib",
	"repository":
	{
		"type": "git",
		"url": "https://github.com/PhiLhoSoft/Web-Playground.git"
	},
	"main": "src/main/index.html",
	"devDependencies":
	{
		"bower": "^1.3.9",
		"browserify": "^6.3.2",
		"http-server": "^0.7.3",
		"opener": "^1.4.0",
		"jshint": "^2.5.10",
		"node-sass": "3.0.0-alpha.0",
		"istanbul": "~0.3.2",
		"mocha": "^1.21.4",
		"sinon": "^1.14.1",
		"chai": "^2.1.0",
		"sinon-chai": "^2.7.0",
		"phantomjs": "~1.9.1",
		"mocha-phantomjs": "^3.5.3",
		"rimraf": "^2.2.8"
	},
	"scripts":
	{
		"clean": "rimraf dist/*",
		"lint": "jshint src/main/js/",

		"prebuild": "npm run clean -s",
		"build": "npm run build:scripts -s && npm run build:styles -s",
		"build:scripts": "browserify -d src/main/js/App.js -p [minifyify --compressPath . --map main.js.map --output dist/main.js.map]",
		"build:styles": "node node-sass.js",

		"pretest": "npm install && npm run lint",
		"pretestph": "npm install && npm run lint",
		"prestart": "npm install",
		"postinstall": "bower install",
		"start": "http-server -a 0.0.0.0 -p 8000 src/main/html/",

		"test": "mocha --reporter spec --recursive src/test",
		"//": "Windows-specific path because of https://github.com/joyent/node/issues/5841",
		"testph": "mocha-phantomjs --reporter spec -p node_modules/phantomjs/lib/phantom/phantomjs.exe src/test/TestBed.html",
		"cover": "istanbul cover node_modules/mocha/bin/mocha -- --reporter dot --check-leaks src/test/ && opener ./coverage/lcov-report/lib/sinon-chai.js.html"
	}
}
