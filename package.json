{
	"name": "philhosoft-js-playground",
	"version": "0.1.0",
	"description": "Playground Web Application: playing with JS frameworks / libraries",
	"author": "PhiLho <PhiLho(a)GMX.net>",
	"contributors":
	[
		{ "name": "You", "email": "you@example.com" }
	],
	"private": false,
	"license": "http://www.opensource.org/licenses/Zlib",
	"repository":
	{
		"type": "git",
		"url": "https://github.com/PhiLhoSoft/Web-Playground.git"
	},
	"main": "src/main/html/index.html",
	"devDependencies":
	{
		"bower": "^1.4.1",
		"chai": "^2.1.0",
		"http-server": "^0.7.3",
		"istanbul": "~0.3.2",
		"jshint": "^2.5.10",
		"mocha": "^1.21.4",
		"mocha-phantomjs": "^3.5.3",
		"node-sass": "3.0.0-alpha.0",
		"opener": "^1.4.0",
		"phantomjs": "~1.9.16",
		"sinon": "^1.14.1",
		"sinon-chai": "^2.7.0",
		"browserify": "^6.0.2",
		"debowerify": "^1.2.0",
		"beefy": "^2.1.3",
		"uglify-js": "^2.4.17"
	},
	"scripts":
	{
		"//": "Using Unix commands. On Windows, get UnxUtils or GnuWin32.",
		"clean": "rm -rf dist/*",
		"lint": "jshint src/main/js/",

		"prebuild": "npm run clean -s",
		"build": "npm run build-html -s && npm run build-js -s && npm run build-css -s",
		"build-html": "cp src/main/html/index.html dist/",
		"build-js-lib": "node browserify.js",
		"build-js": "browserify -t debowerify --external dist/libraries.js --exclude asset/lib/**/*.js src/main/js/App.js -o dist/index.js",
		"build-css": "node-sass --source-comments --source-map=true --output-style nested --include-path src/main/sass --output asset/css src/main/sass/playground.scss",
		"alternative-build-css": "node node-sass-run.js",

		"prestart": "npm install",
		"postinstall": "bower install && npm run build-js-lib -s",
		"start": "http-server -a localhost -p 8090 .",
		"go": "opener http://localhost:8090/dist/",
	    "startb": "beefy dist/index.js 8099 --live --open --  --exclude asset/lib/**/*.js src/main/js/App.js -d",

		"pretest": "npm install && npm run lint -s",
		"pretestphw": "npm install && npm run lint -s",
		"test": "mocha --reporter spec",
		"testOld": "mocha --reporter spec --recursive src/test",
		"testb": "opener src/test/TestBed.html",
		"//": "Windows-specific path because of https://github.com/joyent/node/issues/5841",
		"testphwr": "mocha-phantomjs --proxy-type=none --web-security=false --reporter spec -p node_modules/phantomjs/lib/phantom/phantomjs.exe src/test/RequireTests.html",
		"testphw": "mocha-phantomjs --reporter spec -p node_modules/phantomjs/lib/phantom/phantomjs.exe src/test/TestBed.html",
		"testphu": "mocha-phantomjs --reporter spec -p ./node_modules/phantomjs/bin/phantomjs src/test/TestBed.html",
		"cover": "istanbul cover node_modules/mocha/bin/_mocha -- --reporter dot --recursive src/test",
		"coverr": "npm run cover && opener ./coverage/lcov-report/index.html"
	}
}
